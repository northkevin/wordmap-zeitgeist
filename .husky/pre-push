#!/bin/sh

echo "Running pre-push checks..."

# Track if any checks fail
FAILED=0

# Run frontend checks
if [ -d "frontend" ]; then
    echo "ğŸ” Checking frontend..."
    cd frontend && npm run check || {
        echo "âŒ Frontend checks failed!"
        FAILED=1
    }
    cd ..
fi

# Run backend checks
if [ -d "backend" ]; then
    echo "ğŸ” Checking backend..."
    cd backend && npm run check || {
        echo "âŒ Backend checks failed!"
        FAILED=1
    }
    cd ..
fi

# Exit with error if any checks failed
if [ $FAILED -eq 1 ]; then
    echo ""
    echo "âŒ Pre-push checks failed! Please fix errors before pushing."
    echo ""
    echo "To see specific errors, run:"
    echo "  Frontend: cd frontend && npm run check"
    echo "  Backend:  cd backend && npm run check"
    exit 1
fi

echo "âœ… All checks passed!"