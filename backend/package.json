{
  "name": "wordmap-zeitgeist-backend",
  "version": "1.0.0",
  "description": "Backend API for Wordmap Zeitgeist",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "clean": "rm -rf dist node_modules package-lock.json",
    "fresh:build": "npm run clean && npm install && npm run build",
    "generate-types": "supabase gen types typescript --local > ./src/types/database.types.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "p-queue": "^8.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "supabase": "^2.33.5",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  }
}
